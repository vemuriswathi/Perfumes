<h1>Listing women</h1>

<table>
  <tr>
    <th>Product name</th>
    <th>Image url</th>
    <th>Description</th>
    <th>Price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @women.each do |woman| %>
  <tr>
    <td><%= woman.Product_name %></td>
    <td><%= image_tag(woman.Image_url, :width=>100, :height=>100) %></td>
    <td><%= woman.Description %></td>
    <td><%= woman.Price %></td>
    <td><%= link_to 'Show', woman %></td>
    <td><%= link_to 'Edit', edit_woman_path(woman) %></td>
    <td><%= link_to 'Destroy', woman, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

